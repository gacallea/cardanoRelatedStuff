#!/bin/bash

## EDIT VARIABLES IN 'jor_config' #####
## source the custom variables
# shellcheck source=./jor_config
. ./jor_config

## script name to be used in commands examples
SCRIPTNAME="${0##*/}"

## source all functions files
# shellcheck source=./jor_funcs/
for func in ./jor_funcs/*.bash; do . "$func"; done

## parse command line options and commands:
while true; do
    case "$1" in
    '')
        echo -e "\\n$SCRIPTNAME: no arguments supplied"
        usage
        exit 0
        ;;
    -h | --help)
        usage
        exit 0
        ;;
    --settings)
        settings
        exit 0
        ;;
    --set-vars)
        setVariables
        exit 0
        ;;
    --live-logs)
        liveLogs
        exit 0
        ;;
    --last-logs)
        shift
        lastLogs "$1"
        exit 0
        ;;
    --problems)
        shift
        problemsInLogs "$1"
        exit 0
        ;;
    --issues)
        shift
        issuesInLogs "$1"
        exit 0
        ;;
    --bstrap-time)
        bootstrapTime
        exit 0
        ;;
    --last)
        shift
        lastStart "$1"
        exit 0
        ;;
    --node-stats)
        nodeStats
        exit 0
        ;;
    --pool-stats)
        poolStats
        exit 0
        ;;
    --net-stats)
        netStats
        exit 0
        ;;
    --date-stats)
        shift
        lastDates "$1" "$2"
        exit 0
        ;;
    --sys-stats)
        resourcesStat
        exit 0
        ;;
    --snapshot)
        currentStatus
        exit 0
        ;;
    --current-tip)
        getCurrentTip
        exit 0
        ;;
    --next-epoch)
        nextEpoch
        exit 0
        ;;
    --block-now)
        currentBlockDate
        exit 0
        ;;
    --block-delta)
        blocksDelta
        exit 0
        ;;
    --block-valid)
        shift
        isBlockValid "$1"
        exit 0
        ;;
    --current-stakes)
        currentStakes
        exit 0
        ;;
    --live-stakes)
        liveStakes
        exit 0
        ;;
    --account-balance)
        accountBalance
        exit 0
        ;;
    --rewards-balance)
        rewardsBalance
        exit 0
        ;;
    --connected-estab)
        showEstab
        exit 0
        ;;
    --connected-ips)
        shift
        connectedIps "$1"
        exit 0
        ;;
    --check-peers)
        checkPeers
        exit 0
        ;;
    --is-visible)
        isPoolVisible
        exit 0
        ;;
    --is-quarantined)
        isPoolQuarantined
        exit 0
        ;;
    --quarantined-ips)
        quarantinedIps
        exit 0
        ;;
    --quarantined-ips-count)
        nOfQuarantinedIps
        exit 0
        ;;
    --leader-logs)
        leaderLogs
        exit 0
        ;;
    --scheduled-slots)
        howManySlots
        exit 0
        ;;
    --scheduled-dates)
        scheduleDates
        exit 0
        ;;
    --scheduled-time)
        scheduleTime
        exit 0
        ;;
    --scheduled-next)
        nextScheduledBlock
        exit 0
        ;;
    --fragments)
        fragmentsIds
        exit 0
        ;;
    --fragments-count)
        fragmentIdCount
        exit 0
        ;;
    --fragment-status)
        shift
        fragmentStatus "$1"
        exit 0
        ;;
    *)
        echo -e "\\n$SCRIPTNAME: unknown command '$1'\\n"
        exit 127
        ;;
    esac
done

### THIS SHOULD NEVER BE REACHED ###
exit 999
